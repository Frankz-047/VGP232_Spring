<Window x:Class="Week4.Exercise"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week4"
        mc:Ignorable="d"
        Title="Exercise" Height="450" Width="800">
    <StackPanel>
        <TextBlock x:Name="tbTitle" HorizontalAlignment="Center" Margin="0 20 0 20">"Welcome to exercise 1"</TextBlock>
        <TextBlock Margin="50 20 0 0">Enter your name: </TextBlock>
        <TextBox x:Name="tboxUserName" Margin="50 10 50 10"> </TextBox>
        <Button Width="100" Height="20" Margin="0 0 0 10" Click="HelloMessage">Say hello</Button>
        <Button Width="100" Height="20" Margin="0 0 0 10" Click="IncrementCount" >Count</Button>
        <TextBlock x:Name="tbCounter" HorizontalAlignment="Center" Margin="0 20 0 0">Count = 0</TextBlock>
    </StackPanel>
</Window>
